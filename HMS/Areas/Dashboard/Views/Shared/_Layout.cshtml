<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <title>@ViewBag.Title - HMS</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Dashboard/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Areas/Dashboard/Content/vendor/css/simple-sidebar.css" rel="stylesheet">

    <!-- Font Awsome -->
    <link href="~/Areas/Dashboard/Content/vendor/css/all.css" rel="stylesheet" />

    <script src="~/Areas/Dashboard/Content/vendor/jquery/jquery.min.js"></script>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading"> <i class="fas fa-hotel mr-1"></i> HMS </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "AccomadationTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-building mr-1"></i> Accomadation Types
                </a>
                <a href="@Url.Action("Index", "AccomadationPackages")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-cubes"></i> Accomadation Packages
                </a>
                <a href="@Url.Action("Index", "Accomadations")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-bed"></i> Accomadations
                </a>

                <a href="@Url.Action("Index", "AccomadationTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i> Roles
                </a>
                <a href="@Url.Action("Index", "AccomadationTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users mr-1"></i> Users
                </a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="fas fa-sign-out-alt mr-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!--Used for Logout-->
    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }

    <!-- Bootstrap core JavaScript -->
    <script src="~/Areas/Dashboard/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
